WorkDir=.
ModelDir=$WorkDir$/Output/$ConfigName$
DataDir=/home/dl/data/cntk

ndlMacros=$WorkDir$/Macros.ndl

precision=float
deviceId=1
minibatchSize=16
epochSize=32
maxEpochs=2

command=Train

makeMode=false

initOnCPUOnly=true
numMBsToShowResult=16

imageLayout="cudnn"

traceLevel=1

Train=[
    action=train
    modelPath=$ModelDir$/AlexNet

    NDLNetworkBuilder=[
        networkDescription=$WorkDir$/AlexNet.ndl
    ]
    
    SGD=[
        epochSize=$epochSize$
        minibatchSize=$minibatchSize$
        maxEpochs=$maxEpochs$
        learningRatesPerMB=0.01
        momentumPerMB=0
        dropoutRate=0
    ]

    reader=[
        readerType=UCIFastReader
        file=$DataDir$/imagenet_data0.5K.txt
        randomize=None
        features=[
            dim=150528
            start=1
        ]
        labels=[
            dim=1
            start=0
            labelDim=1000
            labelMappingFile=$DataDir$/labelmap.1K.txt
        ]
    ]
    
]
